      {PlaceHolder $0},
      ]
    </narration>
    <narration action="mid3">
      [
      {PlaceHolder2},
      ]
    </narration>

  </info>

  <observe level ="1">
    <collection>
      <codeNo openLevel ="0">O-09-248</codeNo>
      <portrait openLevel ="1">Custom/NotbaconTakeOne</portrait>

